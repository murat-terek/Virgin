.suggestionForm
  background-color #f7f7f7
  padding 2u
  +tablet()
    padding 4u
  +desktop()
    padding 2u

.title
  font-size 4u
  line-height 5u
  text-transform uppercase
  margin-bottom 1u
  color #cc000c

.description
  font-size 2.5u
  line-height 4u
  text-transform uppercase
  color #cc000c

.input
  margin-top 2u
  border-radius 0

.textarea
  margin-top 2u
  border-radius 0

.footer
  +tablet()
    flex-direction row
    align-items center

.left
  margin-top 2u

.info
  color #9a9a9a

.email
  color #cc000c

.button
  margin-top 2u
  border-radius 0
  +tablet()
    margin-left auto
    padding-left 4u
    padding-right 4u
